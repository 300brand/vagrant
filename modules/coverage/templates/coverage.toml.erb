# File managed by puppet

[beanstalk]
    server                     = "bowmore.beanstalk.islay.coverage.net:11300"

[disgo]
    serve                      = "<%= @ipaddress_eth1 %>:10000"

[logging]
    enabled                    = true
    [logging.trace]
        file                   = ""
        stdout                 = false
        stderr                 = false
        color                  = false
    [logging.debug]
        file                   = ""
        stdout                 = true
        stderr                 = false
        color                  = false
    [logging.info]
        file                   = ""
        stdout                 = true
        stderr                 = false
        color                  = false
    [logging.warn]
        file                   = ""
        stdout                 = true
        stderr                 = false
        color                  = false
    [logging.error]
        file                   = ""
        stdout                 = true
        stderr                 = false
        color                  = false

# [reporting]
#     enabled                    = true
#     memory                     = true
#     numgc                      = true
#     goroutines                 = true
#     timing                     = true

[Article]
    enabled                    = false

[Feed]
    enabled                    = false

[Manager]
    enabled                    = false
    startup                    = true
    [Manager.article]
        tick                   = "15s"
    [Manager.feed]
        tick                   = "30s"
        downloaddelay          = "-2h0m0s"

[Publication]
    enabled                    = false

[Search]
    enabled                    = false

[Social]
    enabled                    = false

[Stats]
    enabled                    = false
    rate                       = 1
    reconnect                  = "10m"
    statsd                     = "ailsabay.stats.lowland.coverage.net:8125"

[StorageReader]
    enabled                    = false
    mongodb                    = "localhost"
    prefix                     = "300brand_"

[StorageWriter]
    enabled                    = false
    mongodb                    = "localhost"
    prefix                     = "300brand_"

[WebAPI]
    enabled                    = false
    httplisten                 = ":8080"

